<style>
  .pets-container {
    background: url(../images/grass.png);
    background-size: 400px;
    height: 800px;
  }

  /* Coordinate layout — uses your variables for absolute positioning */
.coordinate-layout {
  position: relative;
}
.coordinate-layout .pet {
  position: absolute;
  left: var(--x);
  top: var(--y);
}

/* Grid layout — uniform arrangement */
.grid-layout {
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items:flex-start;
  height: unset!important;
  padding: var(--padding-unit);
}
.grid-layout .pet {
  position: static;
}

.pet {
  transition: .2s;
}

.pet:hover {
  transform: scale(1.5);
  z-index: 100;
}

</style>
{% block scripts %}
<script defer>
  document.addEventListener("DOMContentLoaded", function () {
  const toggleBtn = document.getElementById("pet-layout-toggle");
  const container = document.querySelector(".pets-container");


  if (!toggleBtn || !container) return;

  // Restore saved layout
  const saved = localStorage.getItem("petLayout");
  if (saved) {
    container.className = saved;
  }

  toggleBtn.addEventListener("click", () => {
    container.classList.toggle("coordinate-layout");
    container.classList.toggle("grid-layout");
    localStorage.setItem("petLayout", container.className);
  });
});

</script>

